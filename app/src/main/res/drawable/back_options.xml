<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- Drop Shadow Stack -->
    <item>
        <shape android:shape="rectangle" >
            <padding
                android:bottom="2dp"
                android:left="2dp"
                android:right="2dp"
                android:top="2dp" />

            <corners android:radius="2dip" />

            <solid android:color="#007a7a7a" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle" >
            <padding
                android:bottom="2dp"
                android:left="2dp"
                android:right="2dp"
                android:top="2dp" />

            <corners android:radius="2dip" />

            <solid android:color="#107a7a7a" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle" >
            <padding
                android:bottom="2dp"
                android:left="2dp"
                android:right="2dp"
                android:top="2dp" />

            <corners android:radius="2dip" />

            <solid android:color="#207a7a7a" />
        </shape>
    </item>

    <!-- Background -->
    <item>
        <shape android:shape="rectangle" >
            <solid android:color="#FFFFFF" />

            <corners android:radius="2dip" />

            <stroke
                android:width="2dip"
                android:color="#FFFFFF" />
        </shape>
    </item>

</layer-list>