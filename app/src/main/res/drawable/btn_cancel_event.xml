<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#a083c92b" />
            <stroke
                android:width="1dp"
                android:color="#a083c92b" />
            <corners
                android:radius="1dp" />
            <padding
                android:left="7dp"
                android:top="7dp"
                android:right="7dp"
                android:bottom="7dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#83c92b"
                android:endColor="#83c92b"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#83c92b" />
            <corners
                android:radius="1dp" />
            <padding
                android:left="7dp"
                android:top="7dp"
                android:right="7dp"
                android:bottom="7dp" />
        </shape>
    </item>
</selector>