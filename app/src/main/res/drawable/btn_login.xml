<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#a0f78515" />
            <stroke
                android:width="1dp"
                android:color="#a0f78515" />
            <corners
                android:radius="2dp" />
            <padding
                android:left="7dp"
                android:top="7dp"
                android:right="7dp"
                android:bottom="7dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#f78515"
                android:endColor="#f78515"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#f78515" />
            <corners
                android:radius="2dp" />
            <padding
                android:left="7dp"
                android:top="7dp"
                android:right="7dp"
                android:bottom="7dp" />
        </shape>
    </item>
</selector>